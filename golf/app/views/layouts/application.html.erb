<!DOCTYPE html>
<html>
  <head>
    <title>Golf</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <img class= "header" src="http://www.freewebheaders.com/wordpress/wp-content/gallery/golf/large-open-air-course-with-golf-stick-and-ball-web-header.jpg" alt="">
    <h1><%= link_to "Courses", courses_path %></h1>
  <nav>
    <% if @current_user %>
      <%= link_to "Welcome, #{@current_user.username}!", user_path(@current_user) %>
      <%= link_to "Sign Out", session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign Up", new_user_path %>
      <%= link_to "Sign In", new_session_path %>
    <% end %>
    <%= link_to "Courses", courses_path %>
    <%= link_to "Users", users_path %>
  </nav>

  <% flash.each do |type, message| %>
  <p class="<%= type %>"><%= message %></p>
  <% end %>

    <%= yield %>

  </body>
</html>
